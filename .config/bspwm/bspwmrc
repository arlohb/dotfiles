#! /bin/sh

setxkbmap gb

# Remap caps lock to escape
setxkbmap -option caps:escape

# Run screen.sh if it exists
# This should contain the xrandr command,
# workspace setup for each monitor
# e.g. bspc monitor ^1 -d 1 2
#  to put workspaces 1 and 2 on monitor 1
[ -f ".config/bspwm/screen.sh" ] && .config/bspwm/screen.sh

# Run ~/scripts/touchpad.sh if it exists
# This script is to setup tap to click, etc.
[ -f "./scripts/touchpad.sh" ] && ./scripts/touchpad.sh

nitrogen --restore

killall -q sxhkd picom

# Unfortunatly this means I can't see sxhkd's errors,
# but without it the programs it launches clutters the logs
sxhkd  > /dev/null 2>&1 &

picom &

bspc config border_width         2
bspc config focused_border_color \#bd93f9
bspc config normal_border_color \#6272a4
bspc config window_gap          12

bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config focus_follows_pointer true

